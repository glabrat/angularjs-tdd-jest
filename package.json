{
  "name": "angularjs-tdd-jest",
  "version": "0.1.0",
  "author": "Gonzalo Pincheira A. <g.pincheira.a@gmail.com> (https://github.com/gpincheiraa/angularjs-tdd-jest)",
  "scripts": {
    "start": "npm run stubs | webpack-dev-server --hot",
    "dev": "npm start -- --watch",
    "stubs": "stubby -w -d stubs/fakeserver.yml -s 5000",
    "tdd": "cross-env NODE_PATH=./src jest --watch --verbose",
    "test": "cross-env NODE_PATH=./src jest --coverage --verbose",
    "test-debug": "cross-env NODE_PATH=./src node --inspect --inspect-brk node_modules/.bin/jest -i",
    "build": "webpack",
    "check-coverage": "npm test | http-server -so -p 9000 coverage/lcov-report"
  },
  "dependencies": {
    "@uirouter/angularjs": "^1.0.6",
    "angular": "^1.5.6",
    "babel-polyfill": "^6.26.0"
  },
  "devDependencies": {
    "angular-mocks": "^1.6.4",
    "babel-cli": "^6.7.7",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-class-properties": "^6.9.1",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-3": "^6.24.1",
    "cross-env": "^5.0.0",
    "html-loader": "^0.5.1",
    "http-server": "^0.10.0",
    "jest-cli": "^20.0.1",
    "stubby": "^4.0.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "engines": {
    "node": ">=8.4.0"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.html$": "<rootDir>/test/utils/htmlLoader.js"
    },
    "testURL": "http://localhost:3000",
    "setupTestFrameworkScriptFile": "<rootDir>/test/jest.init.js",
    "testMatch": [
      "<rootDir>/test/**/*_spec.js"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
